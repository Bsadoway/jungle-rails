<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <% if session[:user_id] %>
      <div class="form-group">
        <%= form_for [@product, Review.new] do |f| %>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.select :rating, options_for_select([0,1,2,3,4,5]), class: 'form-control' %>
        <%= f.hidden_field :product_id, value: params[:id] %>
        <%= f.submit %>
        <% end %>
      </div>
    <% end %>
    <div class="col-sm-8">
      <% @reviews.each do |review| %>
      <p>"<%= review.description %>"
        <% review.rating.to_i.times do  %>
          <span class="glyphicon glyphicon-star"></span>
        <% end %>
        <% review.blank_stars.times do  %>
          <span class="glyphicon glyphicon-star-empty"></span>
        <% end %>
        <% @users.each do |user| %>
          <% if user.id == review.user_id %>
          <p>
            -<%= user.first_name %>
            <%= user.last_name %>
            </p>
          <% end%>
        <% end %>
        <% if current_user && current_user.id == review.user_id%>
          <%= link_to fa_icon('trash'), product_review_path(params[:id], review.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
        <% end%>
      <% end%>
    </div>

  </article>

</section>
